@model AspNetCore2Boilerplate.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div id="registration-form">
    <h1>Register</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group-lg">
            @Html.LabelFor(m => m.EmailAddress, new { @class = "txt-md-bd form-label" })
            @Html.TextBoxFor(m => m.EmailAddress, "", new { Name = "EmailAddress", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EmailAddress)
            <br />
            @Html.LabelFor(m => m.Username, new { @class = "txt-md-bd form-label" })
            @Html.TextBoxFor(m => m.Username, "", new { Name = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username)
            <br />
            @Html.LabelFor(m => m.Password, new { @class = "txt-md-bd form-label" })
            @Html.PasswordFor(m => m.Password, new { Name = "Password", @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Password)
            <br />
            @Html.LabelFor(m => m.PasswordVerify, new { @class = "txt-md-bd form-label" })
            @Html.PasswordFor(m => m.PasswordVerify, new { Name = "PasswordVerify", @class = "form-control h", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.PasswordVerify)

            <div>
                <button class="login-button" type="submit"><span class="glyphicon glyphicon-menu-right pull-right"></span>Register</button>
            </div>
        </div>
        <div><a asp-area="" asp-controller="User" asp-action="Login">Already have an account?</a></div>
    }
</div>
