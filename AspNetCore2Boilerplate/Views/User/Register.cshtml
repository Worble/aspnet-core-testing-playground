@model AspNetCore2Boilerplate.ViewModels.UserRegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div id="registration-form">
    <h1>Register</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group-lg">
            <label asp-for="EmailAddress" class="txt-md-bd form-label"></label>
            <input type="text" asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress"></span>
            <br />
            <label asp-for="Username" class="txt-md-bd form-label"></label>
            <input type="text" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
            <br />
            <label asp-for="Password" class="txt-md-bd form-label"></label>
            <input type="password" asp-for="Password" class="form-control" autocomplete="off"/>
            <span asp-validation-for="Password"></span>
            <br />
            <label asp-for="PasswordVerify" class="txt-md-bd form-label"></label>
            <input type="password" asp-for="PasswordVerify" class="form-control" autocomplete="off"/>
            <span asp-validation-for="PasswordVerify"></span>

            <div>
                <button class="login-button" type="submit"><span class="glyphicon glyphicon-menu-right pull-right"></span>Register</button>
            </div>
        </div>
        <div><a asp-controller="User" asp-action="Login">Already have an account?</a></div>
    }
</div>
