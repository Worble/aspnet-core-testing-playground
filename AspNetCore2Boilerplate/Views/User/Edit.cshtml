@model AspNetCore2Boilerplate.ViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Email</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group-lg">
        <div>
            @Html.ValidationMessage("Unique")
        </div>
        <label asp-for="EmailAddress" class="txt-md-bd form-label"></label>
        <input type="text" asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress"></span>

        <br />

        <button><span class="glyphicon glyphicon-menu-right pull-right"></span>Change Email</button>
    </div>

}
